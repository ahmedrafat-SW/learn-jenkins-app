pipeline {
    agent any

    stages {
        stage ('scm pipeline') {
            steps {
               sh '''
                    echo "run pipeline code from scm"
                    ls -la
               '''
            }
        }

        stage ('BUILD') {
            agent {
                docker {
                    image 'node:18-apline'
                }
            }
            steps {
                sh '''
                    ls -la

                    node --version
                    npm --version
                    npm ci
                    npm run build

                    ls -la
                '''
            }
        }
    }
}
