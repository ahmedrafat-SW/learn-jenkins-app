pipeline {
    agent any

    environment {
        BUILD_PATH = 'build'
    }
    stages {
        stage ('scm pipeline') {
            steps {
               sh '''
                    echo "run pipeline code from scm"
                    ls -la
               '''
            }
        }

        stage ('BUILD') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -la

                    node --version
                    npm --version
                    npm ci
                    npm run build

                    ls -la
                '''
            }
        }

        stage('TEST') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }

            steps {
            
                sh '''
                    test -f $BUILD_PATH/index.html
                    npm --version
                    npm ci
                    npm test
                '''
            }
        }
    }
}
